{
  "manifest_version": 3,
  "name": "Video Screenshot Capture",
  "version": "1.2",
  "description": "Capture high-quality screenshots from YouTube, X, Instagram, and TikTok videos",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.x.com/*",
        "*://*.twitter.com/*",
        "*://*.instagram.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "take-screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Take screenshot of current video frame"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "web_accessible_resources": [{
    "resources": ["inject.js"],
    "matches": ["<all_urls>"]
  }]
}
